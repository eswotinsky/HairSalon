@using HairSalon.Models;

@{
  Layout = "_Layout";
}
<div class="container">
    <h1>Epicodus Hair Salon</h1>
    <hr>
  <div class="row">
    <div class="col-md-6">
      <h3>@Model.GetName()</h3>
      <div class="client-details">
          <hr>
          <h4>Stylist: <a href="">@Stylist.Find(@Model.GetStylistId()).GetName()</a></h4>
          <hr>
          <h4>Edit client:</h4>
          <form class="" action="/client/update/@Model.GetId()" method="post">
            <div class="form-group">
                <label for="new-client-name">Name</label>
                <input type="text" name="new-client-name" value="@Model.GetName()">
            </div>
            <div class="form-group">
                <label for="">Choose a stylist</label>
                <select name="new-client-stylist">
                    @foreach(var stylist in @Stylist.GetAll())
                    {
                        <option value="@stylist.GetId()">@stylist.GetName()</option>
                    }
                </select>
            </div>
            <button type="submit" name="submit-client-edit">Submit Changes</button>
          </form>
      </div>
      <hr>
      <button type="button" class="btn btn-info"><a href="/">Back to main view</a></button>
    </div>
  </div>
</div>
